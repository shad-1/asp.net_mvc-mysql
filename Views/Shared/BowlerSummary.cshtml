@{
    @model Bowler
}

@*Partial View for Bowler contact info *@
<div class="my-4 p-relative card p-4">

    <div class="d-flex justify-content-between my-2">
        <h5>@Model.BowlerFirstName @Model.BowlerMiddleInit @Model.BowlerLastName</h5>
        <div>@Model.BowlerPhoneNumber</div>
    </div>

    <div class="my-2">
        <div>@Model.BowlerAddress</div>
        <div>@Model.BowlerCity, @Model.BowlerState</div>
        <div>@Model.BowlerZip</div>
    </div>

    <div class="d-flex justify-content-end">
        <div>
            <a class="btn btn-small btn-warning" asp-controller="Home" asp-action="Edit" asp-route-id="@Model.BowlerID">Edit</a>
            <a class="btn btn-small btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@Model.BowlerID">Delete</a>
        </div>
    </div>
</div>