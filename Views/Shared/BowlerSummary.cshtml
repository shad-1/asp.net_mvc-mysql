@{
    @model Bowler
}

@*This serves as a card of sorts, bundling book info*@
@* todo: make generic for other item types? *@
<div class="my-4 p-relative card p-4">

    <div class="d-flex justify-content-between my-2">
        <h5>@Model.BowlerFirstName @Model.BowlerMiddleInit @Model.BowlerLastName</h5>
        <div>@Model.BowlerPhoneNumber</div>
    </div>

    <div class="my-2">@ViewBag.SelectedTeam.TeamName</div>

    <div class="my-2">
        <div>@Model.BowlerAddress</div>
        <div>@Model.BowlerCity, @Model.BowlerState</div>
        <div>@Model.BowlerZip</div>
    </div>

    <div class="d-flex justify-content-between">
        <div></div>
        <form method="post">
            <input type="hidden" value="@Model.BowlerID" />
            <button type="submit" class="btn btn-small btn-warning">Edit</button>
            @*<input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />*@
        </form>
    </div>
</div>